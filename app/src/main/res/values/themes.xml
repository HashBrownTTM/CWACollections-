<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CWACollections" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cwa_blue2</item>
        <item name="colorPrimaryVariant">@color/cwa_blue1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cwa_blue1</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- splash screen style -->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/cwa_blue1</item>
    </style>

    <!-- splash screen style -->
    <style name="registration" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@color/cwa_grey</item>
        <item name="android:statusBarColor">@color/cwa_blue1</item>
    </style>

    <!-- process theme style -->
    <style name="processTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/cwa_blue1</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:windowBackground">@color/cwa_grey</item>
        <item name="android:statusBarColor">@color/cwa_blue1</item>
    </style>

</resources>

