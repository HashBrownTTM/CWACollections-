<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/cwa_grey3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="43dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/cwa_grey3"
                app:srcCompat="?android:attr/actionModeCloseDrawable" />

            <TextView
                android:id="@+id/textView"
                android:fontFamily="@font/comfortaa_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13sp"
                android:layout_marginLeft="28dp"
                android:text="Edit Collection"
                android:layout_toEndOf="@+id/btnBack"
                android:layout_toStartOf="@+id/btnEditCollection"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:fontFamily="@font/comfortaa_bold"
                android:id="@+id/btnEditCollection"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/cwa_grey3"
                android:text="Edit"
                android:textSize="12dp"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cwa_grey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/comfortaa_bold"
                android:id="@+id/lblHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="Fields marked with an \nasterisk (*) indicate fields which are \nrequired to be completed."
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:textSize="16dp"/>

            <TextView
                android:fontFamily="@font/comfortaa_bold"
                android:id="@+id/lblHeading1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp"
                android:text="Name*"/>

            <EditText
                android:id="@+id/txtCollectionName"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:ems="10"
                android:hint="Enter collection's name..."
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="15dp"
                android:inputType="textPersonName"
                android:text=""
                android:textColorHint="@color/white"/>

            <TextView
                android:fontFamily="@font/comfortaa_bold"
                android:id="@+id/lblHeading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp"
                android:text="Collection Goal Amount*"/>

            <EditText
                android:id="@+id/numGoal"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="15dp"
                android:ems="10"
                android:background="@drawable/rounded_corner"
                android:inputType="number" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>

