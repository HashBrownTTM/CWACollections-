<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cwa_grey2"
    tools:context=".Login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lblHeading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginVertical="40dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Account Login"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/lblUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblHeading2"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Username:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/lblUsername"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/editbox_style"
                android:drawableStart="@drawable/ic_at"
                android:drawablePadding="6dp"
                android:hint="Enter your email address"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/cwa_grey2"
                android:textSize="20sp"
                app:background="@drawable/editbox_style" />

            <TextView
                android:id="@+id/lblPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtUsername"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Password:"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/lblPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="-45dp"
                android:background="@drawable/editbox_style"
                android:drawableStart="@drawable/ic_lock_24"
                android:drawablePadding="5dp"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/cwa_grey2"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btnShowPassword"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@id/lblPassword"
                android:layout_marginVertical="5dp"
                android:layout_toEndOf="@+id/txtPassword"
                android:background="@android:color/transparent"
                android:minWidth="48dp"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_remove_red_eye_24"
                android:theme="@style/Theme.AppCompat.Light.Dialog"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/lblForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPassword"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/comfortaa_bold"
                android:padding="7dp"
                android:text="Forgot Password?"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lblSignUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/lblForgotPassword"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Don't have an account?\nSign up here"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblSignUp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="52dp"
                android:background="@drawable/button_style"
                app:backgroundTint="@color/cwa_blue2"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>