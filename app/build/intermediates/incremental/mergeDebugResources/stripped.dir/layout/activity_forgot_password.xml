<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".forgotPassword"
    android:background="@color/cwa_grey2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="43dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/cwa_grey2"
                app:srcCompat="?android:attr/actionModeCloseDrawable" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="43dp"
                android:layout_toEndOf="@+id/btnBack"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Reset Password"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cwa_grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lblHeading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_marginTop="100dp"
            android:text="Please enter email address"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:hint="Enter your email address"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="20dp"
            app:backgroundTint="@color/cwa_blue2"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Reset"
            android:textColor="@color/black" />
    </LinearLayout>
</ScrollView>
</LinearLayout>